{% set latestVideo = videos[0] %}
<section class="py-5">
  <div class="container bg-background mx-auto shadow-3xl p-6">
    <a href="/blog/{{ latestVideo.title | slugify }}" class="block">
      <div class="flex">
        <div class="w-1/2">
          <img src="{{ latestVideo.thumbnailUrl }}" alt="{{ latestVideo.title }}" class="mx-auto" />
        </div>
        <div class="w-1/2 flex justify-center items-center p-3">
          <h1 class="text-center text-2xl font-bold mt-2">{{ latestVideo.title }}</h1>
        </div>
      </div>
    </a>
  </div>
</section>

<section class="bg-[#EEDBCC] mt-10 mb-5">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6">
      {% for video in videos.slice(1) %}
      <div class="video-thumbnail shadow-3xl p-2">
        <a href="/blog/{{ video.title | slugify }}">
          <img src="{{ video.thumbnailUrl }}" alt="{{ video.title }}" class="w-full" />
          <h2 class="text-lg font-semibold mt-2">{{ video.title }}</h2>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>